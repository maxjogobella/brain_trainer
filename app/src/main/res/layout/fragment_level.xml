<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.FragmentRules"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aeeab0">

        <TextView
            android:id="@+id/titleRule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="8dp"
            android:text="@string/title_level"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:backgroundTint="@color/black"
            android:id="@+id/buttonTestLevel"
            style="@style/style_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Тестовый"
            app:layout_constraintTop_toBottomOf="@+id/titleRule"
            tools:layout_editor_absoluteX="32dp" />

        <Button
            android:id="@+id/buttonEasyLevel"
            style="@style/style_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Лёгкий"
            app:layout_constraintTop_toBottomOf="@+id/buttonTestLevel"
            tools:layout_editor_absoluteX="32dp" />

        <Button
            android:id="@+id/buttonMediumLevel"
            style="@style/style_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Средний"
            app:layout_constraintTop_toBottomOf="@+id/buttonEasyLevel"
            tools:layout_editor_absoluteX="32dp" />

        <Button
            android:id="@+id/buttonHardLevel"
            style="@style/style_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/buttonMediumLevel"
            tools:layout_editor_absoluteX="32dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>